<main class="shop-main">
  <section class="category-section">
    <div class="hero-banner">
      <div>
        <h1 class="hero-title">SHIRTS BESTSELLERS</h1>
        <p>Premium streetwear shirts crafted for the urban explorer</p>
      </div>
    </div>
    <div class="shop-meta" style="padding: 20px 16px; text-align: center; color: #666; font-size: 14px;">
      <p id="shopCount"></p>
    </div>

    <div class="products-grid" id="shopGrid">
      {{#if products}}
        {{#each products}}
          <a href="/product?id={{this._id}}" class="product-card">
            <button class="product-badge" style="right:10px; left:auto;" data-wishlist-toggle="{{this._id}}">
              <i class="far fa-heart"></i>
            </button>
            <img src="{{#if this.imageUrl}}{{this.imageUrl}}{{else}}{{this.images.[0].thumb}}{{/if}}" class="product-image" alt="{{this.name}}">
            <div class="product-info">
              <h3 class="product-title">{{this.name}}</h3>
              <p class="product-price">₹{{this.price}}{{#if this.comparePrice}} <span style="text-decoration: line-through; color: #999; font-size: 14px; margin-left: 5px;">₹{{this.comparePrice}}</span>{{/if}}</p>
              <button class="quick-add" data-product-id="{{this._id}}">Quick Add</button>
            </div>
          </a>
        {{/each}}
        {{#unless products.length}}
          <div style="text-align:center;color:#666;padding:40px 0;">No products available</div>
        {{/unless}}
      {{/if}}
    </div>
  </section>
</main>
